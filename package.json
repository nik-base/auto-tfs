{
    "name": "auto-tfs",
    "displayName": "Auto TFS",
    "description": "TF command utils for VS Code",
    "version": "1.2.0",
    "publisher": "nikhil-patil",
    "license": "MIT",
    "author": {
        "name": "Nikhil Patil",
        "url": "https://github.com/nik-base"
    },
    "repository": {
        "url": "https://github.com/nik-base/auto-tfs",
        "type": "git"
    },
    "homepage": "https://github.com/nik-base/auto-tfs#readme",
    "bugs": {
        "url": "https://github.com/nik-base/auto-tfs/issues",
        "email": "nikhil.patil.3632@gmail.com"
    },
    "readmeFilename": "README.md",
    "engines": {
        "vscode": "^1.58.2"
    },
    "categories": [
        "SCM Providers",
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "keywords": [
        "tfs",
        "team",
        "foundation",
        "server",
        "tf",
        "tfvc",
        "vsts",
        "azure",
        "microsoft",
        "auto",
        "auto-tfs",
        "checkout"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "colors": [
            {
                "id": "tfsStatus.added",
                "description": "Color of item added to source control",
                "defaults": {
                    "light": "#587c0c",
                    "dark": "#81b88b",
                    "highContrast": "#1b5225"
                }
            },
            {
                "id": "tfsStatus.modified",
                "description": "Color of item modified on source control",
                "defaults": {
                    "light": "#895503",
                    "dark": "#E2C08D",
                    "highContrast": "#E2C08D"
                }
            },
            {
                "id": "tfsStatus.deleted",
                "description": "Color of item deleted from source control",
                "defaults": {
                    "light": "#ad0707",
                    "dark": "#c74e39",
                    "highContrast": "#c74e39"
                }
            },
            {
                "id": "tfsStatus.renamed",
                "description": "Color of item renamed on source control",
                "defaults": {
                    "light": "#1a3c97",
                    "dark": "#8488c0",
                    "highContrast": "#5c64db"
                }
            },
            {
                "id": "tfsStatus.renamedModified",
                "description": "Color of item renamed and modified on source control",
                "defaults": {
                    "light": "#127f8d",
                    "dark": "#37d0db",
                    "highContrast": "#37d0db"
                }
            }
        ],
        "commands": [
            {
                "command": "auto-tfs.checkout",
                "title": "Checkout",
                "category": "Auto TFS",
                "shortTitle": "Checkout",
                "enablement": "config.auto-tfs.tf.path"
            },
            {
                "command": "auto-tfs.undo",
                "title": "Undo",
                "category": "Auto TFS",
                "shortTitle": "Undo",
                "enablement": "config.auto-tfs.tf.path"
            },
            {
                "command": "auto-tfs.add",
                "title": "Add",
                "category": "Auto TFS",
                "shortTitle": "Add",
                "enablement": "config.auto-tfs.tf.path"
            },
            {
                "command": "auto-tfs.delete",
                "title": "Delete",
                "category": "Auto TFS",
                "shortTitle": "Delete",
                "enablement": "config.auto-tfs.tf.path"
            },
            {
                "command": "auto-tfs.get",
                "title": "Get Latest",
                "category": "Auto TFS",
                "shortTitle": "Get",
                "enablement": "config.auto-tfs.tf.path",
                "icon": "$(cloud-download)"
            },
            {
                "command": "auto-tfs.vsdiff",
                "title": "In Visual Studio",
                "category": "Auto TFS",
                "shortTitle": "Compare",
                "enablement": "config.auto-tfs.tf.path"
            },
            {
                "command": "auto-tfs.codediff",
                "title": "Here",
                "category": "Auto TFS",
                "shortTitle": "Compare",
                "enablement": "config.auto-tfs.tf.path",
                "icon": "$(compare-changes)"
            },
            {
                "command": "auto-tfs.sync",
                "title": "Sync",
                "category": "Auto TFS",
                "shortTitle": "Sync",
                "enablement": "config.auto-tfs.tf.path"
            },
            {
                "command": "auto-tfs.getall",
                "title": "Get All Latest",
                "category": "Auto TFS",
                "shortTitle": "Get All",
                "enablement": "config.auto-tfs.tf.path",
                "icon": "$(cloud-download)"
            },
            {
                "command": "auto-tfs.scmopen",
                "title": "Open Change",
                "category": "Auto TFS",
                "shortTitle": "Open",
                "enablement": "config.auto-tfs.tf.path"
            },
            {
                "command": "auto-tfs.scmview",
                "title": "View",
                "category": "Auto TFS",
                "shortTitle": "View",
                "enablement": "config.auto-tfs.tf.path",
                "icon": "$(go-to-file)"
            },
            {
                "command": "auto-tfs.revert",
                "title": "Revert",
                "category": "Auto TFS",
                "shortTitle": "Revert",
                "enablement": "config.auto-tfs.tf.path",
                "icon": "$(discard)"
            },
            {
                "command": "auto-tfs.revertselected",
                "title": "Revert",
                "category": "Auto TFS",
                "shortTitle": "Revert",
                "enablement": "config.auto-tfs.tf.path"
            },
            {
                "command": "auto-tfs.revertall",
                "title": "Revert All",
                "category": "Auto TFS",
                "shortTitle": "Revert",
                "enablement": "config.auto-tfs.tf.path",
                "icon": "$(discard)"
            },
            {
                "command": "auto-tfs.openonserver",
                "title": "Open on server",
                "category": "Auto TFS",
                "shortTitle": "Open",
                "enablement": "config.auto-tfs.tf.path",
                "icon": "$(globe)"
            }
        ],
        "submenus": [
            {
                "id": "auto-tfs/action",
                "label": "Auto TFS"
            },
            {
                "id": "auto-tfs/action/compare",
                "label": "Compare"
            }
        ],
        "menus": {
            "auto-tfs/action": [
                {
                    "command": "auto-tfs.get",
                    "group": "1_autotfs@1"
                },
                {
                    "command": "auto-tfs.checkout",
                    "group": "1_autotfs@2"
                },
                {
                    "command": "auto-tfs.undo",
                    "group": "1_autotfs@3"
                },
                {
                    "command": "auto-tfs.add",
                    "group": "1_autotfs@4"
                },
                {
                    "command": "auto-tfs.delete",
                    "group": "1_autotfs@5"
                },
                {
                    "submenu": "auto-tfs/action/compare",
                    "group": "1_autotfs@6",
                    "when": "config.auto-tfs.tf.path && !explorerResourceIsFolder && !listMultiSelection"
                },
                {
                    "command": "auto-tfs.openonserver",
                    "when": "config.auto-tfs.tf.path && !listMultiSelection"
                }
            ],
            "auto-tfs/action/compare": [
                {
                    "command": "auto-tfs.codediff",
                    "group": "1_AutoTFS@1"
                },
                {
                    "command": "auto-tfs.vsdiff",
                    "group": "1_AutoTFS@2"
                }
            ],
            "explorer/context": [
                {
                    "submenu": "auto-tfs/action",
                    "group": "4_autotfs@0",
                    "when": "config.auto-tfs.tf.path"
                }
            ],
            "editor/title/context": [
                {
                    "submenu": "auto-tfs/action",
                    "group": "4_autotfs@0",
                    "when": "config.auto-tfs.tf.path"
                }
            ],
            "editor/context": [
                {
                    "submenu": "auto-tfs/action",
                    "group": "4_autotfs@0",
                    "when": "config.auto-tfs.tf.path"
                }
            ],
            "editor/title": [
                {
                    "command": "auto-tfs.codediff",
                    "group": "navigation",
                    "when": "config.auto-tfs.tf.path"
                },
                {
                    "command": "auto-tfs.get",
                    "group": "navigation",
                    "when": "config.auto-tfs.tf.path"
                },
                {
                    "command": "auto-tfs.openonserver",
                    "group": "navigation",
                    "when": "config.auto-tfs.tf.path"
                }
            ],
            "scm/resourceGroup/context": [
                {
                    "command": "auto-tfs.getall",
                    "when": "config.auto-tfs.tf.path",
                    "group": "inline@1"
                },
                {
                    "command": "auto-tfs.revertall",
                    "when": "config.auto-tfs.tf.path",
                    "group": "inline@2"
                }
            ],
            "scm/resourceState/context": [
                {
                    "command": "auto-tfs.openonserver",
                    "when": "config.auto-tfs.tf.path",
                    "group": "inline@1"
                },
                {
                    "command": "auto-tfs.scmview",
                    "when": "config.auto-tfs.tf.path",
                    "group": "inline@2"
                },
                {
                    "command": "auto-tfs.revert",
                    "when": "config.auto-tfs.tf.path",
                    "group": "inline@3"
                },
                {
                    "command": "auto-tfs.revertselected",
                    "when": "config.auto-tfs.tf.path",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Auto TFS",
            "properties": {
                "auto-tfs.tf.path": {
                    "type": "string",
                    "description": "Full path to TF.EXE or TF.CMD"
                },
                "auto-tfs.tfs.confirm": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show confirmation message on any TFS operation (i.e. checkout, add, delete, undo, etc.)"
                },
                "auto-tfs.tfs.autoCheckout": {
                    "type": "string",
                    "default": "Never",
                    "enum": [
                        "Never",
                        "On Save",
                        "On Change"
                    ],
                    "enumDescriptions": [
                        "Don't checkout file(s)",
                        "Checkout file(s) on save",
                        "Checkout file(s) on change"
                    ],
                    "description": "Specifies when should file(s) checked out"
                },
                "auto-tfs.tfs.autoAdd": {
                    "type": "boolean",
                    "default": false,
                    "description": "Add file to source control on adding file(s)"
                },
                "auto-tfs.tfs.autoDelete": {
                    "type": "boolean",
                    "default": false,
                    "description": "Delete file from source control on deleting file(s)"
                },
                "auto-tfs.tfs.autoRename": {
                    "type": "boolean",
                    "default": false,
                    "description": "Rename file on source control on renaming file(s)"
                },
                "auto-tfs.tfs.autoSync": {
                    "type": "boolean",
                    "default": false,
                    "description": "Auto Sync changes (only changes badges, color, etc. Does not get latest)"
                },
                "auto-tfs.tfs.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Run the extension in debug mode. Commands output will be printed, if the setting is set to true"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "node ./node_modules/tslint/bin/tslint --project tsconfig.json src/**/*.ts -t verbose"
    },
    "devDependencies": {
        "@types/node": "^16.4.8",
        "@types/vscode": "^1.58.1",
        "codelyzer": "^6.0.2",
        "tslint": "^6.1.3",
        "typescript": "^4.3.5"
    }
}
